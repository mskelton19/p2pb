        <li><a href="/my-stats">My Stats</a></li> -->
        <li><a href="/signout">Sign Out</a></li>
      </ul>
    </div>
  </nav>

  <!-- group-page.ejs -->
  <div class="tabs">
    <button class="tablinks" id="statsTab">Stats</button>
    <button class="tablinks" id="wagersTab">Open Bets</button>
    <button class="tablinks" id="myBetsTab">My Bets</button>
    <button class="tablinks" id="createBetTab">Create Bet</button>
  </div>

 <!-- Stats Tab Content now includes Leaderboard and Stats -->
 <div id="stats" class="tabcontent default-open">
   <!-- Leaderboard Section moved here -->
   <h4 style="text-align:center; margin-top:20px;"><%= userGroup %> Scoreboard</h4>
   <div id="group-table"></div>

   <h4 style="text-align:center; margin-top:20px;">Stats by Sport</h4>
   <div id="sports-stats-table"></div>

   <h4 style="text-align:center; margin-top:20px;">Record vs Others</h4>
   <div id="user-records-table"></div>
</div>

 <!-- Stats Tab Content -->
  <div id="wagers" class="tabcontent">
    <h4 style="text-align:center; margin-top:20px;"><%= userGroup %> Open Bets</h4>
    <div id="wagers-container" class="wagers-container"></div>
  </div>

  <div id="myBets" class="tabcontent">

  <!-- Sub-tabs for My Bets -->
  <div class="my-bets-tabs">
    <button class="sub-tablinks" id="my-bets-tab-upcoming" onclick="openSubTab('my-upcoming-events-section')">Upcoming Bets</button>
    <button class="sub-tablinks" id="my-bets-tab-inprogress" onclick="openSubTab('my-in-progress-events-section')">In Progress Bets</button>
    <button class="sub-tablinks" id="my-bets-tab-finished" onclick="openSubTab('my-finished-events-section')">Finished Bets</button>
  </div>

  <div id="my-upcoming-events-section" class="bets-section sub-tabcontent">

  </div>
  <div id="my-in-progress-events-section" class="bets-section sub-tabcontent" style="display:none;">

  </div>
  <div id="my-finished-events-section" class="bets-section sub-tabcontent" style="display:none;">

  </div>
</div>

<!-- Inside the Create Bet tab content -->
<div id="createBet" class="tabcontent">
  <!-- Sport icons container, adapted from games.ejs -->
  <div id="createBet-sports-icons-container" class="sports-icons-container">
    <div class="createBet-sport-icon" data-sportid="18" data-leagueid="10042997">🏀 NCAAB</div>
    <div class="createBet-sport-icon" data-sportid="17" data-leagueid="10037477">🏒 NHL</div>
    <div class="createBet-sport-icon" data-sportid="12" data-leagueid="10037219">🏈 NFL</div>
    <div class="createBet-sport-icon" data-sportid="18" data-leagueid="10041830">🏀 NBA</div>
  </div>

  <!-- Container for the events will go here -->
  <div id="createBet-events-container" class="events-container"></div>

  <!-- Include other necessary elements like the drawer here -->
</div>

<!-- Update the drawer HTML for team name and odds on the same line -->
<div id="drawer-container">
  <div id="drawer" class="drawer">
    <div class="drawer-nav">
      <!-- Updated close button -->
      <div class="close-button" onclick="hideDrawer()">x</div>
    </div>
    <!-- <div class="drawer-header">
      <p id="drawerEventTime" class="drawer-event-time"></p>
    </div> -->
    <div class="drawer-content">
  <div class="drawer-info">
    <p id="drawerTeamName" class="drawer-team-name"></p>
    <p id="drawerOdds" class="drawer-odds"></p>
  </div>
  <input type="text" id="wagerInput" placeholder="Enter wager">
  <button id="confirmButton" onclick="confirmWager(teamNames, eventTime)">Place Bet</button>
</div>



  <!-- You can add more content or styling as needed -->
<script src="navbar.js"></script> <!-- JavaScript for navbar functionality -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/tabulator-tables/dist/js/tabulator.min.js"></script>
