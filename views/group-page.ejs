</head>
<body>
  <input type="checkbox" id="menu-toggle" class="menu-checkbox">

  <nav class="navbar">
    <div class="menu">
      <div class="menu-content">
        <!-- Hamburger Menu Icon -->
        <div class="menu-icon" id="menu-icon">
          <div class="bar"></div>
          <div class="bar"></div>
          <div class="bar"></div>
        </div>
        <!-- Logo -->
        <div class="logo">ChalkIQ</div>
      </div>
      <!-- Menu Items -->
      <ul>
        <!-- <li><a href="/mygroup">My Group</a></li>
