<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="navbar.css">
  <title>Accepted Bets</title>
</head>
<body>
  <!-- ... navigation and other layout ... -->
  <input type="checkbox" id="menu-toggle" class="menu-checkbox">

  <nav class="navbar">
    <div class="menu">
      <div class="menu-content">
        <!-- Hamburger Menu Icon -->
        <div class="menu-icon" id="menu-icon">
          <div class="bar"></div>
          <div class="bar"></div>
          <div class="bar"></div>
        </div>
        <!-- Logo -->
        <div class="logo">ChalkIQ</div>
      </div>
      <!-- Menu Items -->
      <ul>
        <li><a href="/games">Games</a></li>
        <li><a href="/wagers">Wagers</a></li>
        <li><a href="/mybets">My Bets</a></li>
        <li><a href="/my-stats">My Stats</a></li>
      </ul>
    </div>
  </nav>

  <h1>My Stats</h1>
 <section id="stats-section">
   <h2>Your Stats</h2>
   <div id="stats-container">
     <% myStats.forEach(function(event) { %>
       <div class="finished-event-card">
         <h3 class="wager-amount">$<%= event.wagerAmount %></h3>
          <div class="event-details">
            <div class="winner">
              <h4><%= event.winner %> <span style="color: green;">&#10004;</span></h4> <!-- Green check mark -->
              <p><%= event.winningTeam %></p>
              <p><%= event.winningScore %></p>
              <p><%= event.winningOdds %></p>
            </div>
            <div class="loser">
              <h4><%= event.loser %> <span style="color: red;">&#10008;</span></h4> <!-- Red X mark -->
              <p><%= event.losingTeam %></p>
              <p><%= event.losingScore %></p>
              <p><%= event.losingOdds %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <script>
    var userData = <%- JSON.stringify(user) %>; // Embed JSON data
  </script>

  <!-- ... rest of your body content ... -->
  <script src="navbar.js"></script> <!-- JavaScript for navbar functionality -->
</body>
</html>
